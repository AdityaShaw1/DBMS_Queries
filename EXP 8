SELECT COUNT(*) AS NumEmployees, AVG(SAL) AS AvgSalary
FROM EMPLOYEE
WHERE DEPTNO = 20;

SELECT ENAME, SAL, SAL * 0.10 AS PF
FROM EMPLOYEE;

SELECT ENAME
FROM EMPLOYEE
WHERE HIREDATE < ADD_MONTHS(SYSDATE, -24);

SELECT *
FROM EMPLOYEE
ORDER BY SAL ASC;

SELECT ENAME, HIREDATE
FROM EMPLOYEE
ORDER BY HIREDATE DESC;

SELECT ENAME, SAL, 
       SAL * 0.10 AS PF, 
       SAL * 0.50 AS HRA, 
       SAL * 0.30 AS DA, 
       SAL + (SAL * 0.50) + (SAL * 0.30) AS Gross
FROM EMPLOYEE
ORDER BY Gross ASC;

SELECT DEPTNO, COUNT(*) AS NumEmployees
FROM EMPLOYEE
GROUP BY DEPTNO;

SELECT DEPTNO, SUM(SAL) AS TotalSalary
FROM EMPLOYEE
GROUP BY DEPTNO;

SELECT JOB, COUNT(*) AS NumEmployees
FROM EMPLOYEE
GROUP BY JOB
ORDER BY NumEmployees DESC;

SELECT JOB, 
       SUM(SAL) AS TotalSalary, 
       MAX(SAL) AS MaxSalary, 
       MIN(SAL) AS MinSalary, 
       AVG(SAL) AS AvgSalary
FROM EMPLOYEE
GROUP BY JOB;

SELECT SUM(SAL) AS TotalSalary, 
       MAX(SAL) AS MaxSalary, 
       MIN(SAL) AS MinSalary, 
       AVG(SAL) AS AvgSalary
FROM EMPLOYEE
WHERE DEPTNO = 20;

SELECT JOB, 
       SUM(SAL) AS TotalSalary, 
       MAX(SAL) AS MaxSalary, 
       MIN(SAL) AS MinSalary, 
       AVG(SAL) AS AvgSalary
FROM EMPLOYEE
WHERE DEPTNO = 20
GROUP BY JOB
HAVING AVG(SAL) > 1000;
